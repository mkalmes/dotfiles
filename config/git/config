[user]
	name = Marc Kalmes
[core]
	editor = /usr/local/bin/mate -w
	excludesfile = ~/.gitignore
[credential]
	helper = osxkeychain
[merge]
	tool = Kaleidoscope
	stat = true
[color]
	ui = auto
[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
[diff]
	# renames = true
	mnemonicprefix = true
	tool = Kaleidoscope
[mergetool]
	keepBackup = true
	prompt = false
[push]
	# Kudos to @tenderlove
	# http://twitter.com/#!/tenderlove/statuses/180420276155187200
	default = current
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
